# Bittensor Signer Environment Variables

# Set this variable to provide the password for key operations non-interactively
BTSIGNER_PASSWORD=your-secure-password-here

# Key configuration
# If using a specific key file
KEY_PATH=/app/keystore/key.json

# If using keystore
# KEYSTORE_PATH=/app/keystore
# KEY_ID=your-key-id

# Server configuration
SERVER_ADDRESS=0.0.0.0:50051

# TLS configuration
# Set to true to enable TLS
TLS_ENABLED=false
# TLS_CERT_PATH=/app/certs/server.crt
# TLS_KEY_PATH=/app/certs/server.key
# TLS_CLIENT_AUTH=false
# TLS_CA_PATH=/app/certs/ca.crt

# Metrics configuration
METRICS_ENABLED=true
METRICS_ADDRESS=0.0.0.0:9090

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
